{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Strict Type-Checking Options */
    "strict": true,
    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "forceConsistentCasingInFileNames": true, /*Ensures that file imports are case-sensitive, helping to avoid issues related to case mismatches in file names, especially on case-sensitive file systems like Linux*/
  "esModuleInterop": true /*Enables compatibility with commonJS, which is useful for libraries that depend on commonjs modules*/
}
